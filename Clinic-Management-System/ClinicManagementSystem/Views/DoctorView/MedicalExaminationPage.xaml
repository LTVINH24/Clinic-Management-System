<Page
    x:Class="ClinicManagementSystem.Views.MedicalExaminationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClinicManagementSystem.Views"
    xmlns:vm="using:ClinicManagementSystem.ViewModel"
    xmlns:model="using:ClinicManagementSystem.Model"
    xmlns:converters="using:ClinicManagementSystem.Converters"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:ExaminationStatusColorConverter x:Key="ExaminationStatusColorConverter"/>
        <converters:ExaminationStatusTextConverter x:Key="ExaminationStatusTextConverter"/>
        <converters:DateConverter x:Key="DateConverter"/>
    </Page.Resources>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ListView hiển thị các phiếu khám -->
        <ListView ItemsSource="{Binding ExaminationForms}" 
                  SelectionChanged="ListView_SelectionChanged" 
                  Grid.Row="0"
                  Margin="0,0,0,10"
                  BorderBrush="{ThemeResource SystemAccentColor}"
                  BorderThickness="1"
                  CornerRadius="8"
                  Padding="10">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:MedicalExaminationForm">
                    <Border BorderBrush="{ThemeResource SystemAccentColor}" 
                            BorderThickness="0,0,0,1" 
                            Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Examination ID:" FontWeight="Bold" Foreground="Gray"/>
                                <TextBlock Text="{x:Bind Id}" FontSize="16" Margin="0,0,0,10"/>

                                <TextBlock Text="Patient Information:" FontWeight="Bold" Foreground="Gray"/>
                                <TextBlock FontSize="16" Margin="0,0,0,10">
                                    <Run Text="{x:Bind Patient.Name}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{x:Bind Patient.Gender}"/>
                                    <Run Text=" - "/>
                                    <Run Text="{x:Bind Patient.DoB, Converter={StaticResource DateConverter}}"/>
                                </TextBlock>

                                <TextBlock Text="Time:" FontWeight="Bold" Foreground="Gray"/>
                                <TextBlock Text="{x:Bind Time}" FontSize="16" Margin="0,0,0,10"/>

                                <TextBlock Text="Symptom:" FontWeight="Bold" Foreground="Gray"/>
                                <TextBlock Text="{x:Bind Symptoms}" FontSize="16" TextWrapping="Wrap"/>
                            </StackPanel>

                            <Border Grid.Column="1" 
                                    Background="{x:Bind IsExaminated, Converter={StaticResource ExaminationStatusColorConverter}}"
                                    CornerRadius="4"
                                    Padding="8,4"
                                    VerticalAlignment="Top"
                                    Margin="10,0,0,0">
                                <TextBlock Text="{x:Bind IsExaminated, Converter={StaticResource ExaminationStatusTextConverter}}"
                                       Foreground="White"
                                       FontWeight="SemiBold"/>
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Các nút điều hướng -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,20,0,0">
            <Button Content="Previous" Command="{Binding PreviousPageCommand}" 
                    Width="100" 
                    Style="{StaticResource AccentButtonStyle}"  
                    Margin="5"/>
            <Button Content="Next" Command="{Binding NextPageCommand}" 
                    Width="100" 
                    Style="{StaticResource AccentButtonStyle}" 
                    Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
