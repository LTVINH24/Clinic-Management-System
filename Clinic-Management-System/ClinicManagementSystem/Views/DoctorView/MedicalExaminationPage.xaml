<Page
    x:Class="ClinicManagementSystem.Views.DoctorView.MedicalExaminationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:ClinicManagementSystem.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Medical Examination Forms"
                  FontSize="24"
                  FontWeight="Bold"
                  Margin="20"/>

        <AutoSuggestBox Grid.Row="1"
                        Margin="20,0,20,10"
                        PlaceholderText="Search by patient name..."
                        QueryIcon="Find"
                        TextChanged="AutoSuggestBox_TextChanged"
                        Text="{Binding Keyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <ListView Grid.Row="2"
                  ItemsSource="{Binding ExaminationForms}"
                  SelectionChanged="ListView_SelectionChanged"
                  Margin="20">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:MedicalExaminationForm">
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{x:Bind Id}" Margin="0,0,20,0"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind Patient.Name}" Margin="0,0,20,0"/>
                        <TextBlock Grid.Column="2" Text="{x:Bind Time}" Margin="0,0,20,0"/>
                        <TextBlock Grid.Column="3" Text="{x:Bind VisitType}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- PhÃ¢n trang -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,10,0,20">
            <Button Click="PreviousButton_Click">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE76B;"/>
            </Button>
            
            <StackPanel Orientation="Vertical" Margin="10,0">
                <TextBlock TextAlignment="Center" 
                          Width="60" 
                          FontSize="16">
                    <Run Text="{Binding SelectedPageInfo.Page}"/> of 
                    <Run Text="{Binding SelectedPageInfo.Total}"/>
                </TextBlock>
                <ComboBox ItemsSource="{Binding PageInfos}"
                         SelectedItem="{Binding SelectedPageInfo, Mode=TwoWay}"
                         SelectionChanged="PagesComboBox_SelectionChanged"
                         Width="100">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="model:PageInfo">
                            <TextBlock>
                                <Run Text="{x:Bind Page}"/>/
                                <Run Text="{x:Bind Total}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <Button Click="NextButton_Click">
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE76C;"/>
            </Button>
        </StackPanel>
    </Grid>
</Page>
