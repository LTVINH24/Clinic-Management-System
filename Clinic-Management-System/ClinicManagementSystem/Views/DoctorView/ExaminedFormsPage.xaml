<Page
    x:Class="ClinicManagementSystem.Views.DoctorView.ExaminedFormsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClinicManagementSystem.Views.DoctorView"
    xmlns:vm="using:ClinicManagementSystem.ViewModel"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Examined Forms List"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- List of examined forms -->
        <ListView x:Name="test" Grid.Row="1"
                  ItemsSource="{x:Bind ViewModel.ExaminedForms}"
                  SelectedItem="{x:Bind ViewModel.SelectedForm, Mode=TwoWay}"
                  SelectionChanged="ListView_SelectionChanged"
                  BorderBrush="{ThemeResource SystemAccentColor}"
                  BorderThickness="1"
                  Margin="0,0,0,20">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Id}" 
                                 Margin="0,0,20,0"/>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding Patient.Name}" 
                                     FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Time}" 
                                     Foreground="Gray"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2" 
                                 Text="Examined"
                                 Foreground="Green"
                                 FontWeight="SemiBold"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page> 