<Page
    x:Class="ClinicManagementSystem.Views.StaffView.UnbilledPrescriptionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:ClinicManagementSystem.Model"
    xmlns:converters="using:ClinicManagementSystem.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:DateTimeToStringConverter x:Key="DateTimeToStringConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Unbilled Prescriptions"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="0,0,0,20"/>

        <AutoSuggestBox Grid.Row="1"
                        Margin="0,0,0,10"
                        PlaceholderText="Search prescriptions..."
                        QueryIcon="Find"
                        TextChanged="AutoSuggestBox_TextChanged"
                        Text="{Binding Keyword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <ListView Grid.Row="2"
                  ItemsSource="{Binding Prescriptions}"
                  SelectionChanged="ListView_SelectionChanged"
                  Margin="0,0,0,10">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Prescription">
                    <Grid Padding="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Row 1: Time and Patient Name -->
                        <StackPanel Grid.Row="0" Grid.Column="0" 
                                    Orientation="Horizontal">
                            <TextBlock Text="Patient: "/>
                            <TextBlock Text="{x:Bind Patient.Name}" FontWeight="SemiBold"/>
                        </StackPanel>

                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                  Text="{x:Bind Time, Converter={StaticResource DateTimeToStringConverter}}" 
                                  Foreground="Gray"/>

                        <!-- Row 2: Gender and DoB -->
                        <StackPanel Grid.Row="1" Grid.Column="0" 
                                    Orientation="Horizontal">
                            <TextBlock Text="Gender: "/>
                            <TextBlock Text="{x:Bind Patient.Gender}" 
                                      Foreground="Gray"/>
                            <TextBlock Text=" | DoB: " Margin="10,0,0,0"/>
                            <TextBlock Text="{x:Bind Patient.DoB, Converter={StaticResource DateTimeToStringConverter}}" 
                                      Foreground="Gray"/>
                        </StackPanel>

                        <!-- Row 3: Prescription ID -->
                        <StackPanel Grid.Row="2" Grid.Column="0" 
                                    Orientation="Horizontal">
                            <TextBlock Text="Prescription ID: "/>
                            <TextBlock Text="{x:Bind Id}" 
                                      Foreground="Gray"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button Content="Previous"
                    Click="PreviousButton_Click"
                    Style="{StaticResource AccentButtonStyle}"
                    Margin="0,0,10,0"/>

            <TextBlock VerticalAlignment="Center" Margin="10,0">
                <Run Text="{Binding CurrentPage}"/>
                <Run Text="/"/>
                <Run Text="{Binding TotalPages}"/>
            </TextBlock>

            <Button Content="Next"
                    Click="NextButton_Click"
                    Style="{StaticResource AccentButtonStyle}"
                    Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Page> 