<Page
    x:Class="ClinicManagementSystem.Views.StaffView.UnbilledPrescriptionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClinicManagementSystem.Views.StaffView"
    xmlns:vm="using:ClinicManagementSystem.ViewModel"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Unbilled Prescriptions List"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- List of unbilled prescriptions -->
        <ListView Grid.Row="1"
                  ItemsSource="{x:Bind ViewModel.UnbilledPrescriptions}"
                  SelectedItem="{x:Bind ViewModel.SelectedPrescription, Mode=TwoWay}"
                  SelectionChanged="ListView_SelectionChanged"
                  BorderBrush="{ThemeResource SystemAccentColor}"
                  BorderThickness="1"
                  Margin="0,0,0,20">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Id}" 
                                 Margin="0,0,20,0"/>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding MedicalExaminationFormId}" 
                                     FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Time}" 
                                     Foreground="Gray"/>
                        </StackPanel>

                        <TextBlock Grid.Column="2" 
                                 Text="Unbilled"
                                 Foreground="Orange"
                                 FontWeight="SemiBold"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page> 