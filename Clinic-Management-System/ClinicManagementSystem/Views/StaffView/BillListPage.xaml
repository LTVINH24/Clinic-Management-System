<Page
    x:Class="ClinicManagementSystem.Views.StaffView.BillListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:ClinicManagementSystem.Model"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Bills List"
                  FontSize="24"
                  FontWeight="Bold"
                  Margin="0,0,0,20"/>

        <ListView Grid.Row="1"
                  ItemsSource="{x:Bind ViewModel.Bills, Mode=OneWay}"
                  SelectedItem="{x:Bind ViewModel.SelectedBill, Mode=TwoWay}"
                  SelectionChanged="ListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Bill">
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{x:Bind Id}" Margin="0,0,20,0"/>
                        <TextBlock Grid.Column="1" Text="{x:Bind CreatedDate}" Margin="0,0,20,0"/>
                        <TextBlock Grid.Column="2" Text="{x:Bind TotalAmount}" Margin="0,0,5,0"/>
                        <TextBlock Grid.Column="3" Text="VND"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page> 