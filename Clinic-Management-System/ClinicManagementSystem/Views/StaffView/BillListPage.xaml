<Page
    x:Class="ClinicManagementSystem.Views.StaffView.BillListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:ClinicManagementSystem.Model"
    xmlns:converters="using:ClinicManagementSystem.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <converters:DateTimeToStringConverter x:Key="DateTimeToStringConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Search Box -->
        <Grid Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box -->
            <AutoSuggestBox Grid.Column="0"
                            PlaceholderText="Search by patient name..."
                            QueryIcon="Find"
                            Text="{x:Bind ViewModel.Keyword, Mode=TwoWay}"
                            Width="300"
                            Margin="0,0,10,0"/>

            <!-- Date Range Pickers -->
            <CalendarDatePicker Grid.Column="1"
                                Header="From Date"
                                Date="{x:Bind ViewModel.StartDate, Mode=TwoWay}"
                                Margin="0,0,10,0"/>

            <CalendarDatePicker Grid.Column="2"
                                Header="To Date"
                                Date="{x:Bind ViewModel.EndDate, Mode=TwoWay}"
                                Margin="0,0,10,0"/>

            <!-- Clear Filter Button -->
            <Button Grid.Column="3"
                    Content="Clear Filter"
                    Click="ClearFilter_Click"
                    Style="{StaticResource AccentButtonStyle}"
                    Margin="0,0,10,0"/>
        </Grid>

        <!-- Bills List -->
        <ListView Grid.Row="1"
                  ItemsSource="{x:Bind ViewModel.Bills, Mode=OneWay}"
                  SelectionChanged="ListView_SelectionChanged"
                  Margin="0,10">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Bill">
                    <Grid Padding="12">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Row 1: Bill ID and Date -->
                        <StackPanel Grid.Row="0" Grid.Column="0" 
                                  Orientation="Horizontal">
                            <TextBlock Text="Bill ID: "/>
                            <TextBlock Text="{x:Bind Id}" FontWeight="SemiBold"/>
                            <TextBlock Text=" | Patient: " Margin="10,0,0,0"/>
                            <TextBlock Text="{x:Bind Patient.Name}" FontWeight="SemiBold"/>
                        </StackPanel>

                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                 Text="{x:Bind CreatedDate, Converter={StaticResource DateTimeToStringConverter}}" 
                                 Foreground="Gray"/>

                        <!-- Row 2: Amount and Status -->
                        <StackPanel Grid.Row="1" Grid.Column="0" 
                                  Orientation="Horizontal">
                            <TextBlock Text="Amount: "/>
                            <TextBlock Text="{x:Bind TotalAmount}" Foreground="Gray"/>
                            <TextBlock Text=" VND" Foreground="Gray"/>
                            <TextBlock Text=" | Status: " Margin="10,0,0,0"/>
                            <TextBlock Text="{x:Bind IsGetMedicine}" Foreground="Gray"/>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Pagination -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Spacing="10">
            <Button Content="Previous"
                    Click="PreviousButton_Click"/>
            <ItemsControl ItemsSource="{x:Bind ViewModel.PageInfos, Mode=OneWay}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="model:PageInfo">
                        <Button Content="{x:Bind Page}"
                                Margin="5,0"
                                Click="PageButton_Click"
                                Style="{StaticResource AccentButtonStyle}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="Next"
                    Click="NextButton_Click"/>
        </StackPanel>
    </Grid>
</Page> 